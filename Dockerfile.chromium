FROM debian:bookworm

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update && apt-get install -y \
    chromium \
    chromium-driver \
    xvfb \
    python3 \
    python3-pip \
    curl \
    ca-certificates \
    fonts-liberation \
    libnss3 \
    libatk-bridge2.0-0 \
    libgtk-3-0 \
    libgbm1 \
    libasound2 \
    && rm -rf /var/lib/apt/lists/*

RUN pip3 install selenium

WORKDIR /app
COPY grab.py /app/grab.py

CMD ["xvfb-run","-a","python3","/app/grab.py"]
